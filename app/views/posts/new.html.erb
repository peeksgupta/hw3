<h1>New Post</h1>

<%= form_with :model => @post do |form| %>
  <p>
    <%= form.label "title" %>
    <%= form.text_field "title" %>
  </p>
 
  <p>
    <%= form.label "posted_on" %>
    <%= form.date_field "posted_on" %>
  </p>

 <p>
    <%= form.label "Description" %>
    <%= form.text_area "description" %>
  </p>

  <p>
    <%= form.hidden_field "place_id" %>
  </p>
  
  <p>
    <%= form.submit %>
  </p>
<% end %>

<p>
    <a href="/places">Back to List of Places</a>
</p>